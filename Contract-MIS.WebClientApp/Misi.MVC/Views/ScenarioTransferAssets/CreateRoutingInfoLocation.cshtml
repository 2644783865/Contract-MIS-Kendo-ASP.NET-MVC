@using Misi.MVC.Resources
@using Misi.MVC.ViewModels.ScenarioTransferAssets
@model RoutingInfoLocationViewModel

@{
    ViewBag.Title = SharedResource.Create + " " + SharedResource.RoutingInfo + " " + SharedResource.TransferAssets + " " + ScenarioTransferAssetsResource.Location;
}
           
@Html.Partial("_PartialValidationSummary", ViewData.ModelState)

@using (Html.BeginForm("CreateRoutingInfoLocation", "ScenarioTransferAssets", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken() 
   
        <div class="panel">
            @Html.Partial("_PartialSectionInformation", SharedResource.RoutingInfo)
            <div class="panel-body" style="display: block;">
                @Html.Partial("_PartialSubScenarioTransferAssets", Model.RoutingInfoHeadingViewModel)
                <!--Row-->
                <div class="row">
                    <!-- Content Form Routinginformation -->
                    <div class=@CSSResource.HalfPage>
                        <div class="form-group">
                            @(Html.Bootstrap().LabelFor(m => m.RoutingInfoHeadingViewModel.IdrWebNumber).Class(CSSResource.FormLabel))
                            <div class=@CSSResource.FormControlDiv>
                                <div class="row">
                                    <div class=@CSSResource.HalfPage>
                                        @(Html.Bootstrap().TextBoxFor(m => m.RoutingInfoHeadingViewModel.IdrWebNumber).Class("form-control global"))
                                        @Html.ValidationMessageFor(m => m.RoutingInfoHeadingViewModel.IdrWebNumber)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Content Form Routinginformation -->
                </div>
                <!--End Row-->

                <!--Row-->
                <div class="row">
                    <!-- Content Form Routinginformation -->
                    <div class=@CSSResource.HalfPage>
                        <div class="form-group">
                            @(Html.Bootstrap().LabelFor(m => m.RoutingInfoHeadingViewModel.ContractNumberViewModel.ContractNumber).Class(CSSResource.FormLabel))
                            <div class=@CSSResource.FormControlDiv>
                                <div class="row">
                                    <div class="@CSSResource.HalfPage">
                                        @Html.Bootstrap().TextBoxFor(m => m.RoutingInfoHeadingViewModel.ContractNumberViewModel.ContractNumber).Class("form-control global")
                                        @Html.ValidationMessageFor(m => m.RoutingInfoHeadingViewModel.ContractNumberViewModel.ContractNumber)
                                    </div>
                                    <div class=@CSSResource.SecondaryControlDiv>
                                        @(Html.Bootstrap().TextBoxFor(m => m.RoutingInfoHeadingViewModel.ContractNumberViewModel.ContractLineNumber).Class("form-control global"))
                                        @Html.ValidationMessageFor(m => m.RoutingInfoHeadingViewModel.ContractNumberViewModel.ContractLineNumber)
                                    </div>
                                    <div class="@CSSResource.HelpText">
                                        @Html.Bootstrap().LabelFor(m => m.RoutingInfoHeadingViewModel.ContractNumberViewModel.ContractLineNumber)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Content Form Routinginformation -->
                </div>
                <!--End Row-->
                <!--Row-->
                <div class="row">
                    <!-- Content Form Routinginformation -->
                    <div class=@CSSResource.HalfPage>
                        <div class="form-group">
                            @(Html.Bootstrap().LabelFor(m => m.RoutingInfoHeadingViewModel.EquipmentViewModel.Equipment).Class(CSSResource.FormLabel))
                            <div class=@CSSResource.FormControlDiv>
                                <div class="row">
                                    <div class=@CSSResource.HalfPage>
                                        @(Html.Bootstrap().TextBoxFor(m => m.RoutingInfoHeadingViewModel.EquipmentViewModel.Equipment).Class("form-control global"))
                                        @Html.ValidationMessageFor(m => m.RoutingInfoHeadingViewModel.EquipmentViewModel.Equipment)
                                    </div>
                                    <div class=@CSSResource.SecondaryControlDiv>
                                        @(Html.Bootstrap().TextBoxFor(m => m.RoutingInfoHeadingViewModel.EquipmentViewModel.EquipmentDescription).Class("form-control global"))
                                        @Html.ValidationMessageFor(m => m.RoutingInfoHeadingViewModel.EquipmentViewModel.EquipmentDescription)
                                    </div>
                                    <div class="@CSSResource.HelpText">
                                        @Html.Bootstrap().LabelFor(m => m.RoutingInfoHeadingViewModel.EquipmentViewModel.EquipmentDescription)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Content Form Routinginformation -->
                </div>
                <!--Row-->

                <!--Row-->
                <div class="row">
                    <!-- Content Form Routinginformation -->
                    <div class=@CSSResource.HalfPage>
                        <div class="form-group">
                            @(Html.Bootstrap().LabelFor(m => m.RoutingInfoHeadingViewModel.DeviceList).Class(CSSResource.FormLabel))
                            <div class=@CSSResource.FormControlDiv>
                                @Html.Bootstrap().DropDownListFor(m => m.RoutingInfoHeadingViewModel.DeviceList.PostData, Model.RoutingInfoHeadingViewModel.DeviceList.Sources).Class("form-control global")
                                @Html.ValidationMessageFor(m => m.RoutingInfoHeadingViewModel.DeviceList)
                            </div>
                        </div>
                    </div>
                    <!-- Content Form Routinginformation -->
                </div>
                <!--End Row-->

                <!--Row-->
                <div class="row">
                    <!-- Content Form Routinginformation -->
                    <div class=@CSSResource.HalfPage>
                        <div class="form-group">
                            @(Html.Bootstrap().LabelFor(m => m.RoutingInfoHeadingViewModel.SnDevice).Class(CSSResource.FormLabel))
                            <div class=@CSSResource.FormControlDiv>
                                <div class="row">
                                    <div class=@CSSResource.HalfPage>
                                        @(Html.Bootstrap().TextBoxFor(m => m.RoutingInfoHeadingViewModel.SnDevice).Class("form-control global"))
                                        @Html.ValidationMessageFor(m => m.RoutingInfoHeadingViewModel.SnDevice)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Content Form Routinginformation -->
                </div>
                <!--End Row-->

                <!--Row-->
                <div class="row">
                    <!-- Content Form Routinginformation -->
                    <div class=@CSSResource.HalfPage>
                        <div class="form-group">
                            @(Html.Bootstrap().LabelFor(m => m.RoutingInfoHeadingViewModel.RoutingMemo).Class(CSSResource.FormLabel))
                            <div class=@CSSResource.FormControlDiv>
                                @(Html.Bootstrap().TextAreaFor(m => m.RoutingInfoHeadingViewModel.RoutingMemo).Class("form-control global textarea-autosize"))
                                @Html.ValidationMessageFor(m => m.RoutingInfoHeadingViewModel.SnDevice)
                            </div>
                        </div>
                    </div>
                    <!-- Content Form Routinginformation -->
                </div>
                <!--End Row-->
                
            </div>
        </div>
        
        <div class="panel">
            @Html.Partial("_PartialSectionInformation", SharedResource.ScenarioAttribute)
            <div class="panel-body" style="display: block;">
                <!--Row-->
                <div class="row">
                    <!-- Content Form ScenarioAttribute -->
                    <div class=@CSSResource.HalfPage>
                        <div class="form-group">
                            @(Html.Bootstrap().LabelFor(m => m.ScenarioAttributeLocationViewModel.UserHolderNameList).Class(CSSResource.FormLabel))
                            <div class=@CSSResource.FormControlDiv>
                                @Html.Kendo().DropDownList().Name("UserHolderNameList").BindTo(Model.ScenarioAttributeLocationViewModel.UserHolderNameList).Value(Model.ScenarioAttributeLocationViewModel.UserHolderNameList.FirstOrDefault(e => e.Selected).Value).Enable(false)
                                @Html.ValidationMessageFor(m => m.ScenarioAttributeLocationViewModel.UserHolderNameList)
                            </div>
                        </div>
                    </div>
                    
                    <div class=@CSSResource.HalfPage>
                        <div class="form-group">
                            @(Html.Bootstrap().LabelFor(m => m.ScenarioAttributeLocationViewModel.OldLocationList).Class(CSSResource.FormLabel))
                            <div class=@CSSResource.FormControlDiv>
                                @Html.Kendo().DropDownList().Name("OldLocationList").BindTo(Model.ScenarioAttributeLocationViewModel.OldLocationList).Value(Model.ScenarioAttributeLocationViewModel.OldLocationList.FirstOrDefault(e => e.Selected).Value).Enable(false)
                                @Html.ValidationMessageFor(m => m.ScenarioAttributeLocationViewModel.OldLocationList)
                            </div>
                        </div>
                    </div>
                    <!-- Content Form ScenarioAttribute -->
                </div>
                <!--End Row-->
                <!--Row-->
                <div class="row">
                    <!-- Content Form ScenarioAttribute -->
                    <div class=@CSSResource.HalfPage>
                        <div class="form-group">
                            @(Html.Bootstrap().LabelFor(m => m.ScenarioAttributeLocationViewModel.UserSalaryNumberList).Class(CSSResource.FormLabel))
                            <div class=@CSSResource.FormControlDiv>
                                @Html.Kendo().DropDownList().Name("UserSalaryNumberList").BindTo(Model.ScenarioAttributeLocationViewModel.UserSalaryNumberList).Value(Model.ScenarioAttributeLocationViewModel.UserSalaryNumberList.FirstOrDefault(e => e.Selected).Value).Enable(false)                                
                                @Html.ValidationMessageFor(m => m.ScenarioAttributeLocationViewModel.UserSalaryNumberList)
                            </div>
                        </div>
                    </div>

                    <div class=@CSSResource.HalfPage>
                        <div class="form-group">
                            @(Html.Bootstrap().LabelFor(m => m.ScenarioAttributeLocationViewModel.NewLocationList).Class(CSSResource.FormLabel))
                            <div class=@CSSResource.FormControlDiv>
                                @Html.Bootstrap().DropDownListFor(m => m.ScenarioAttributeLocationViewModel.NewLocationList.PostData, Model.ScenarioAttributeLocationViewModel.NewLocationList.Sources).Class("form-control global")
                                @Html.ValidationMessageFor(m => m.ScenarioAttributeLocationViewModel.NewLocationList)
                            </div>
                        </div>
                    </div>
                    <!-- Content Form ScenarioAttribute -->
                </div>
                <!--End Row-->
            </div>
        </div>

    <div class="panel">
        @Html.Partial("_PartialSectionInformation", SharedResource.RoutingTable)
        <div class="panel-body" style="display: block;">
            <div class="row">
                <!-- Content Form Routinginformation -->
                @Html.EditorFor(m => m.RoutingTableViewModel)

                <!-- Content Form Routinginformation -->
            </div>
        </div>
    </div>

    <div class="bootstrap">
        <div class="@CSSResource.FullPage">
            <div class="form-group">
                @Html.Bootstrap().SubmitButton().Text(SharedResource.SaveDraft).Class(CSSResource.EndFormButton).PrependIcon(new Icon(CSSResource.IconSave))
                @Html.Bootstrap().Button().Text(SharedResource.AddRouting).Class(CSSResource.EndFormButton).PrependIcon(new Icon(CSSResource.IconAdd))
                @Html.Bootstrap().ActionLink(SharedResource.Finish, "Preview", "ScenarioTransferAssets").Class(CSSResource.EndFormButton).PrependIcon(new Icon(CSSResource.IconFinish))
                @Html.Bootstrap().ActionLink(SharedResource.Cancel, "Index", "ScenarioTransferAssets").Class(CSSResource.EndFormButton).PrependIcon(new Icon(CSSResource.IconCancel))
            </div>
        </div>
    </div>


}