@using Misi.MVC.Resources
@using Misi.MVC.ViewModels.ScenarioReturnDevice
@using Misi.MVC.ViewModels.ScenarioGeneral
@model PreviewReturnDeviceViewModel

@{
    ViewBag.Title = SharedResource.Preview + " " + SharedResource.ReturnDevice;
}

@Html.Partial("_PartialValidationSummary", ViewData.ModelState)

@using (Html.BeginForm("Preview", "ScenarioReturnDevice", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    
        <div class="panel">
            @Html.Partial("_PartialSectionInformation", SharedResource.PreviewServiceRequest)
            <div class="panel-body" style="display: block;">
                <!--Row-->
                <div class="row">
                    <!-- Content Form Routinginformation -->
                    <div class=@CSSResource.FullPage>
                        <div class="form-group">
                            @*@(Html.Bootstrap().LabelFor(m => m.PreviewRequestInfoViewModel.RoutingCreationDate).Class(CSSResource.FormLabel))
                                <div class=@CSSResource.FormControlDiv>
                                    @(Html.Kendo().DatePickerFor(m => m.RoutingInfoHeadingViewModel.RoutingCreationDate).Name("RoutingCreationDate"))
                                    @Html.ValidationMessageFor(m => m.RoutingInfoHeadingViewModel.RoutingCreationDate)
                                </div>*@
                            @(Html.Kendo().Grid<PreviewRequestInfoViewModel>()
                                  .Name("PreviewRequestInfoViewModel")
                                  .Columns(columns =>
                                  {
                                      columns.Bound(e => e.Item).Width(100);
                                      columns.Bound(e => e.ServiceId).Width(150);
                                      columns.Bound(e => e.TicketId).Width(150);
                                      columns.Bound(e => e.RequestedBy).Width(180);
                                      columns.Bound(e => e.IssuedBy).Width(150);
                                      columns.Bound(e => e.IssuedDate).Width(150);
                                      columns.Bound(e => e.SnOrIdNumber).Width(180);
                                      columns.Bound(e => e.Company).Width(150);
                                      columns.Bound(e => e.Location).Width(150);
                                      columns.Bound(e => e.Email).Width(100);
                                      columns.Bound(e => e.RequestedDate).Width(180);
                                      columns.Bound(e => e.RequestedVia).Width(180);
                                      columns.Bound(e => e.RequestMemo).Width(180);
                                  })
                                  .ColumnMenu()
                                  .Sortable()
                                  .Pageable()
                                  .Scrollable()
                                  )
                            
                        </div>
                    </div>
                    <!-- Content Form Routinginformation -->
                </div>
                <!--End Row-->
            </div>

            <div class="panel-footer">
                <div class="bootstrap">
                    <div class="@CSSResource.FullPage">
                        @Html.Bootstrap().SubmitButton().Text(SharedResource.Save).Class(CSSResource.EndFormButton).PrependIcon(new Icon(CSSResource.IconSave))
                        @Html.Bootstrap().SubmitButton().Text(SharedResource.AddRouting).Class(CSSResource.EndFormButton).PrependIcon(new Icon(CSSResource.IconAdd))
                        @Html.Bootstrap().SubmitButton().Text(SharedResource.Submit).Class(CSSResource.EndFormButton).PrependIcon(new Icon(CSSResource.IconFinish))
                        @Html.Bootstrap().ActionLink(SharedResource.Cancel, "Index", "ScenarioReturnDevice").Class(CSSResource.EndFormButton).PrependIcon(new Icon(CSSResource.IconCancel))
                    </div>
                </div>
            </div>
        </div>
     
}